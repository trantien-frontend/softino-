                        -let blogCard = [{'img':'./images/blog-1.jpg','title':'softiono performance based software'},{'img':'./images/blog-2.jpg','title':'lasted software design in features'}]
                        each item in blogCard 
                            div(class="col-lg-4 col-md-6 col-12")
                                .blog__item
                                    div(class='blog__item-img bg-theme')
                                        img(src=item.img, alt="")
                                        a(href="#") photo
                                    .blog__item-dsc
                                        .blog-meta 
                                            ul(class="list-meta")
