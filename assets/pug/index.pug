<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Sofino
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css")
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700;800&family=Titillium+Web:wght@300;400;600;700;900&display=swap" rel="stylesheet")
        link(rel="shortcut icon" href="./images/imageURL.ico")
        +block-css
    body
        -let page = 'index'
        .wrapper 
            +theme-section(page)
            include ./component/loading.pug
            include ./component/overlay.pug
            include ./component/scroll-top.pug
            .head 
                .nav 
                    .container
                        div(class="nav-container")
                            .nav-container__logo
                                a(href="#" class="logo")
                                    img(src="./images/logo-theme-3.png", class="theme-logo" alt="")
                            +nav-menu(page)
                            .nav-container__button
                                a(href='#' class="button button-theme button--square button--style-first" data-text="Login")
                                    span L
                                    span o
                                    span g
                                    span i
                                    span n
                            .nav-container__bars
                                div(class="bar bg-theme bar--top")
                                div(class="bar bg-theme bar--center")
                                div(class="bar bg-theme bar--bottom")
                include ./layout/banner.pug
            .main
                +about-section(page)
                +feature(page)
                +step(page)
                +team(page)
                +price-section(page)
                +testimonial(page)
                +counter(page)
                +blog(page)
                +footer(page)
        +block-js
            